<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" fillWidth="false" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se233.cropedgestudio.controllers.CropController">
    <ScrollPane fx:id="imageScroll" fitToHeight="true" fitToWidth="true" prefHeight="401.0" prefWidth="800.0">
        <content>
            <BorderPane fx:id="imagePane" prefHeight="395.0" prefWidth="798.0">
                <center>
                    <ImageView fx:id="imageView" fitHeight="388.0" fitWidth="725.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" />
                </center>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
            </BorderPane>
        </content>
    </ScrollPane>
    <HBox alignment="CENTER" prefHeight="78.0" prefWidth="800.0" spacing="10">
        <ListView fx:id="myListView" prefHeight="92.0" prefWidth="260.0" />
    </HBox>
    <Pane prefHeight="129.0" prefWidth="800.0">
      <HBox alignment="CENTER" layoutX="78.0" layoutY="72.0" spacing="10.0">
         <children>
              <Button fx:id="Select_Button" mnemonicParsing="false" onAction="#handleSelectArea" text="Select Area" />
              <Button fx:id="Crop_Button" mnemonicParsing="false" onAction="#handleCrop" prefHeight="25.0" prefWidth="75.0" text="Crop" />
              <Button fx:id="Save_Button" mnemonicParsing="false" onAction="#handleSave" prefHeight="25.0" prefWidth="72.0" text="Save" />
              <Button fx:id="Clear_Select_Button" mnemonicParsing="false" onAction="#handleClearSelect" text="Clear Select" textAlignment="CENTER" />
              <Button fx:id="Clear_Image_Button" mnemonicParsing="false" onAction="#handleClearImage" text="Clear Image" />
            <Button fx:id="Batch_Button" mnemonicParsing="false" onAction="#handleBatchProcess" text="Batch Process" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="6.0" layoutY="121.0" prefHeight="17.0" prefWidth="785.0">
         <children>
            <Label fx:id="statusLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="769.0" text="Status: Ready" textAlignment="CENTER" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="315.0" layoutY="14.0" />
      <HBox alignment="CENTER" layoutX="317.0" layoutY="-8.0" prefHeight="17.0" prefWidth="168.0">
         <children>
            <Label text="Drop file here or upload image" textAlignment="CENTER" />
         </children>
      </HBox>
      <Button fx:id="Upload_Button" alignment="CENTER" contentDisplay="CENTER" layoutX="338.0" layoutY="21.0" mnemonicParsing="false" onAction="#handleUploadImage" text="Upload Image" textAlignment="CENTER" />
    </Pane>
</VBox>
